{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["dom", "es2017"],
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitOverride": true,
    "downlevelIteration": true,
    "experimentalDecorators": true 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]  
}
